<h1>Repofinder - Category <%= @cat_name %></h1>
<p>V 0.0.2 - 25. Januar 2012</p>

<a href="/category">Categories</a>

<table>
	<tr>
		<th>Stats</th>
		<th>Owner / Name</th>
		<th>Description</th>
		<th>Tags</th>
		<th>Last Updated</th>
		<th>Links</th>
		<th>Manage tags</th>
	</tr>
	
<% @repos.each do |repo| %>
	<tr class="repo">
		
		<td class="stats">
			<span class="watchers">Watchers: <%= repo.watchers %></span>
			<span class="forks">Forks: <%= repo.forks %></span>
		</td>
		
		<td class="ident">
			<a href="<%= repo.html_url %>" target="_blank">
				<span class="owner"><%= repo.owner %></span>&nbsp;/&nbsp;<span class="name"><%= repo.name %></span>
			</a>
		</td>
		
		<td class="description"><%= repo.description %></td>
		
		<td class="Tags"><%= repo.category_list %></td>
		
		<td class="last_updated"><%= time_ago_in_words(repo.last_updated) %> ago</td>
		
		<td class="links">
			<a href="<%= repo.html_url %>" class="github_url" target="_blank">Github &raquo;</a>
			<a href="<%= repo.homepage %>" class="homepage_url" target="_blank">Homepage &raquo;</a>
		</td>
		
		<td class="add_tag">
			<form action="/tag" method="post">
				<input type="hidden" name="repo_id" value="<%= repo.id %>" />
				<input type="text" size="8" name="tag_name" />
				<input type="submit" value="Add tag">
				<input type="submit" value="RM tag" name="remove_tag">
			</form>	
		</td>
		
	</tr>
<% end %>
</table>

<p>Add a new repo</p>
<form accept-charset="UTF-8" action="/repo" method="post">
	<label for="owner">Owner</label> /
	<label for="name">Name</label>
	
	<input type="text" size="20" id="owner" name="repo[owner]" /> /
	<input type="text" size="25" id="name" name="repo[name]" />
	
	<input type="submit" value="Add repo" />
</form>
